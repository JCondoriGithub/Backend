<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.example.org/note" xmlns:tns="http://www.example.org/note" elementFormDefault="qualified">

    <element name="note" type="tns:noteType"></element>
    
    <complexType name="noteType">
    	<sequence>
    		<element name="title">
    			<simpleType>
    				<restriction base="string">
    					<maxLength value="20"></maxLength>
    				</restriction>
    			</simpleType>
    		</element>
    		<element name="message">
    			<complexType>
    				<simpleContent>
    					<extension base="string">
    						<attribute name="lang">
    							<simpleType>
    								<restriction base="string">
    									<enumeration value="ita"></enumeration>
    									<enumeration value="eng"></enumeration>
    									<enumeration value="fra"></enumeration>
    								</restriction>
    							</simpleType>
    						</attribute>
    					</extension>
    				</simpleContent>
    			</complexType>
    		</element>
    		<element name="from" type="string"></element>
    		<element name="to" type="string"></element>
    	</sequence>
    </complexType>
</schema>