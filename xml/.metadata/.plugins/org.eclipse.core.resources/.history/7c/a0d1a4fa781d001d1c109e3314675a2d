<!ELEMENT agenda (persona*)>
<!ELEMENT persona ((descrizione, amici) | of)>
<!ELEMENT descrizione (#PCDATA | cv)*>
<!ELEMENT cv (#PCDATA)>
<!ELEMENT amici (persona*)>
<!ELEMENT of (#PCDATA)>

<!ATTLIST persona
	id		ID		#REQUIRED
	NOME	CDATA	#REQUIRED
	cognome	CDATA	#REQUIRED
	eta		CDATA	#IMPLIED>
<!ATTLIST of
	id	IDREF	#REQUIRED>